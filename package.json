{
	"name": "classSeatChange",
	"version": "5.1.0",
	"description": "자리뽑기",
	"main": "main.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "electron .",
		"build:osx": "electron-builder --mac",
		"build:linux": "npm run build:linux32 && npm run build:linux64",
		"build:linux32": "electron-builder --linux --ia32",
		"build:linux64": "electron-builder --linux --x64",
		"build:win": "npm run build:win32 && npm run build:win64",
		"build:win32": "electron-builder --win --ia32",
		"build:win64": "electron-builder --win --x64"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/NY0510/classSeatChange.git"
	},
	"build": {
		"productName": "자리자리자리",
		"appId": "kr.ny64.kr.classSeatChange",
		"artifactName": "ClassSeatChange-Setup-${version}.${ext}",
		"copyright": "© 2022 NY64. All rights reserved.",
		"asar": true,
		"mac": {
			"target": [
				"default"
			],
			"icon": "assets/icon.icns"
		},
		"dmg": {
			"title": "자리자리자리",
			"icon": "assets/icon.icns"
		},
		"publish": {
			"provider": "github"
		},
		"protocols": {
			"name": "자리자리자리",
			"schemes": [
				"TEST"
			]
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"nsis": {
			"oneClick": true,
			"allowToChangeInstallationDirectory": false,
			"deleteAppDataOnUninstall": true,
			"createDesktopShortcut": true,
			"installerIcon": "icon.ico",
			"uninstallerIcon": "icon.ico",
			"uninstallDisplayName": "자리자리자리"
		},
		"directories": {
			"buildResources": "./assets",
			"output": "./build"
		}
	},
	"keywords": [],
	"author": "NY64",
	"license": "ISC",
	"dependencies": {
		"check-internet-connected": "^2.0.5",
		"electron-progressbar": "^2.0.1",
		"electron-updater": "^4.6.5"
	},
	"devDependencies": {
		"electron": "^22.0.0",
		"electron-builder": "^23.6.0"
	}
}
